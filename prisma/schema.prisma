generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Afiliacao {
  JEDI
  SITH
  REBELDE
}

enum Fabricante {
  JEDI
  SITH
  REBELDE
}


model Planeta {
  id         String @id  @default(uuid()) 
  nome       String
  tipoDeClima      String   @map("tipo_de_clima")
  tipoDeTerreno    String   @map("tipo_de_terreno")
  populacao  Int

  sistemaEstelar  SistemaEstelar @relation(fields: [sistemaEstelarId], references: [id])
  sistemaEstelarId  String
}

model SistemaEstelar {
  id String  @id @default(uuid())
  nome  String 
  descricao String
  planetas   Planeta[]
}


model Personagen {
  id String @id @default(uuid())
  nome String
  raca  String
  afiliacao  Afiliacao
}

model NaveEspacial {
  id  String @id @default(uuid())
  nome  String
  modelo  String
  fabricante  Fabricante
  capacidadeDePassageiros Int  @map("capacidade_de_passageiros")

}

